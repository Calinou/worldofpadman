<?xml version="1.0" standalone="yes"?>
<install product="WoP"
	desc="World of Padman"
	version="@VERSION@"
	update_url="http://www.worldofpadman.com/updates.txt"
	promptbinaries="yes"
	reinstall="yes"
	nopromptoverwrite="yes">
<!--	preuninstall="preuninstall.sh"> -->
  <readme>
    README
  </readme>
  <eula>
    id_patch_pk3s_Q3A_EULA.txt
  </eula>

  <component name="Quake3 Arena gamedata" version="@VERSION@" default="yes">
   <option required="true" install="true" show="false">
     This needs to be fixed properly.
     <files path="wop">
       wop-data.tar
     </files>
   </option>
  </component>
  <component arch="x86_64" name="x86_64" version="@VERSION@">
    <option install="true">
     x86_64 binaries
     <binary libc="any" symlink="wop" icon="quake3.png"
             menu="." name="WoP">
       WoP
     </binary>
     <files>
       wop-engine.x86_64.tar
       quake3.png
     </files>
    </option>
  </component>

  <component if="|(x86,x86_64)" name="i386" version="@VERSION@">
    <option install="true">
     x86 (32 bit) binaries
     <binary libc="any" symlink="wop" icon="quake3.png"
             menu="." name="WoP">
       WoP
     </binary>
     <files>
       wop-engine.i386.tar
       quake3.png
     </files>
    </option>
  </component>

  <component arch="ppc" name="ppc" version="@VERSION@">
    <option install="true">
     ppc 32 bit binaries
     <binary libc="any" symlink="wop" icon="quake3.png"
             menu="." name="WoP">
       WoP
     </binary>
     <files>
       wop-engine.ppc.tar
       quake3.png
     </files>
    </option>
  </component>
</install>
